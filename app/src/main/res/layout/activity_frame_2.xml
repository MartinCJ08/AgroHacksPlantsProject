<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_frame_2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="plants.chimichangas.agrohacks.com.agrohacksplantsproject.frame_2">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Name"
        android:ems="10"
        android:layout_alignBottom="@+id/pendiente"
        android:layout_alignParentStart="true"
        android:id="@+id/hect" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:id="@+id/rg_cultivos"
        android:layout_below="@+id/hect"
        android:layout_alignParentStart="true"
        android:layout_marginStart="28dp">

        <RadioButton
            android:text="alfalfa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/r_1"
            android:layout_weight="1" />

        <RadioButton
            android:text="maiz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/r_2"
            android:layout_weight="1" />

        <RadioButton
            android:text="nuez"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/r_3"
            android:layout_weight="1" />

        <RadioButton
            android:text="cebolla"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/r_4"
            android:layout_weight="1" />

        <RadioButton
            android:text="jalapeÃ±o"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/r_5"
            android:layout_weight="1" />
    </RadioGroup>

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/f1"
        android:layout_alignStart="@+id/f1"
        android:layout_marginTop="11dp"
        android:id="@+id/f2" />

    <Button
        android:text="Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pendiente"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="37dp"
        android:id="@+id/prod"
        android:layout_below="@+id/rg_cultivos"
        android:layout_alignStart="@+id/rg_cultivos"
        android:layout_marginStart="13dp" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/f3"
        android:layout_below="@+id/f2"
        android:layout_alignStart="@+id/f2"
        android:layout_marginTop="25dp" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:id="@+id/f1"
        android:layout_below="@+id/prod"
        android:layout_alignStart="@+id/prod" />
</RelativeLayout>
