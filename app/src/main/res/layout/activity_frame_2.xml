<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_frame_2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="plants.chimichangas.agrohacks.com.agrohacksplantsproject.frame_2">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Hectáreas"
        android:ems="10"
        android:layout_alignBottom="@+id/pendiente"
        android:layout_alignParentStart="true"
        android:id="@+id/hect" />

    <Button
        android:text="Calcular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pendiente"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        android:id="@+id/rg_cultivos"
        android:layout_below="@+id/hect"
        android:layout_alignParentStart="true">

        <RadioButton
            android:text="alfalfa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/r_1"
            android:layout_weight="1" />

        <RadioButton
            android:text="Maíz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/r_2"
            android:layout_weight="1" />

        <RadioButton
            android:text="nuez"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/r_3"
            android:layout_weight="1" />

        <RadioButton
            android:text="cebolla"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/r_4"
            android:layout_weight="1" />

        <RadioButton
            android:text="jalapeño"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/r_5"
            android:layout_weight="1" />
    </RadioGroup>

    <TextView
        android:text="."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:id="@+id/f1"
        android:layout_alignTop="@+id/rg_cultivos"
        android:layout_toEndOf="@+id/rg_cultivos"
        android:layout_marginStart="34dp" />

    <TextView
        android:text="."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="38dp"
        android:id="@+id/prod"
        android:layout_below="@+id/rg_cultivos"
        android:layout_alignParentStart="true"
        android:layout_marginStart="19dp" />

    <TextView
        android:text="."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:id="@+id/f2"
        android:layout_below="@+id/f1"
        android:layout_alignStart="@+id/f1" />

    <TextView
        android:text="."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/f3"
        android:layout_marginBottom="11dp"
        android:layout_alignBottom="@+id/rg_cultivos"
        android:layout_alignStart="@+id/f2" />
</RelativeLayout>
